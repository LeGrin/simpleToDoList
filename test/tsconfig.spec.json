{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "allowJs": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceRoot": "../src",
    "baseUrl": "../src",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "outDir": "./build/dist/",
    "typeRoots": ["node_modules/@types"],
    "types": ["jasmine", "node"]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": ["../src/**/*.spec.ts", "../**/*.d.ts"],
  "exclude": [
    "node_modules",
    "build/dist/*",
    "dist-serve/*",
    "node/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true,
    "useCache": true
  },
  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit": true
  }
}
